{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"reveal": "never",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": true,
		"clear": false
	},
	"problemMatcher": [
		"$errmatcher-tniasm",
		"$errmatcher-tniasm-preprocessor"
	],
	"tasks": [
		{
			"label": "make clean build",
			"type": "shell",
			"command": "make",
			"group": "build"
		},
		{
			"label": "make (default)",
			"type": "shell",
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}